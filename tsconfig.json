{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2019"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    /* Strict Type-Checking Options */
    "strict": true,
    /* Module Resolution Options */
    "esModuleInterop": true,
    /* Experimental Options */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}